@model IEnumerable<KurumsalWeb.Models.Model.Hakkimizda>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2><strong>Hakkımızda</strong></h2>

<table class="table table-responsive-sm">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Aciklama)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResimURL)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.Raw(item.Aciklama)
    </td>
    <td>
        <img src="@item.ResimURL" class="img-responsive" width="300" height="200" />
    </td>
    <td>
        @Html.ActionLink("Güncelle", "Edit", new { id = item.Id })
    </td>
</tr>
    }

</table>
