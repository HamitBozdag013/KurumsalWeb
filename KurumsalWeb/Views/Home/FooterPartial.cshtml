@using KurumsalWeb.Helper;
<footer>
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Kurumsal Web Site Projesi</h5>
                    <address>
                        <strong>@ViewBag.Iletisim.Adres</strong><br>
                    </address>
                    <p>
                        <i class="icon_phone"></i> @ViewBag.Iletisim.Telefon <br>
                        <i class="icon_mail"></i> @ViewBag.Iletisim.Email
                    </p>
                </div>
            </div>
            <div class="col-lg-2">
                <div class="widget">
                    <h5 class="widgetheading">Menü</h5>
                    <ul class="link-list">
                        <li><a href="~/Anasayfa/">Anasayfa</a></li>
                        <li><a href="~/Hakkimizda/">Hakkımızda</a></li>
                        <li><a href="~/Hizmetlerimiz/">Hizmetlerimiz</a></li>
                        <li><a href="~/BlogPost/">Blog</a></li>
                        <li><a href="~/Iletisim/">iletişim</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Popüler Blog Yazıları</h5>
                    <ul class="link-list">
                        @foreach (var blog in ViewBag.Blog)
                        {
                            <li><a href="/BlogPost/@SeoHelper.ToSeoUrl(blog.Baslik).ToLower()-@blog.Id">@blog.Baslik</a></li>
                        }


                    </ul>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="widget">
                    <h5 class="widgetheading text-center">Hizmetlerimiz</h5>
                    <div class="flickr_badge">
                        @foreach (var hizmet in ViewBag.Hizmetler)
                        {
                            <img src="@hizmet.ResimURL" width="75" height="30" />
                        }
                    </div>
                    <div class="clear">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="sub-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="copyright">
                        <p>@DateTime.Now.Year &copy; Tüm hakları saklıdır.</p>
                        <div class="credits">
                            <!--
                              All the links in the footer should remain intact.
                              You can delete the links only if you purchased the pro version.
                              Licensing information: https://bootstrapmade.com/license/
                              Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/buy/?theme=Moderna
                            -->
                            Designed by <a href="https://kurumsalweb.com/">KurumsalWeb</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ul class="social-network">
                        <li><a href="https://www.facebook.com/@ViewBag.Iletisim.Facebook" data-placement="top" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="https://x.com/@ViewBag.Iletisim.Twitter" data-placement="top" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="https://www.linkedin.com/in/@ViewBag.Iletisim.LinkedIn" data-placement="top" title="Linkedin"><i class="fa fa-linkedin"></i></a></li>
                        <li><a href="https://www.instagram.com/@ViewBag.Iletisim.Instagram" data-placement="top" title="İnstagram"><i class="fa fa-instagram"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer>
