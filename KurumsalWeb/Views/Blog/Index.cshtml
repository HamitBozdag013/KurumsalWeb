@model IEnumerable<KurumsalWeb.Models.Model.Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2><strong>Blog Kayıtları</strong></h2>
@Html.ActionLink("Blog Ekle", "Create", null, new { @class = "btn btn-success" })

<hr />
<table class="table table-responsive" id="myTable">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>Resim Yolu</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model)
        {
            <tr>
                <td>@blog.Id</td>
                <td>@blog.Baslik</td>
                <td>@blog.Kategori.KategoriAd</td>
                <td><img width="100" height="80" src="@blog.ResimURL" /></td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { blog.Id }, new { @class = "btn btn-sm btn-warning" })
                    @Html.ActionLink("Sil", "Delete", new { blog.Id }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable(
            {
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.0.8/i18n/tr.json',
                },
            });
    });
</script>

