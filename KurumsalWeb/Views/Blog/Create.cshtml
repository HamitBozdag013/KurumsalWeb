
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2><strong>Blog Oluştur</strong></h2>
<hr />
<div class="row">
    <div class="col">
        <div class="form">
                                                @*@using (Html.BeginForm("Create", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))*@
                <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Blog/Create" enctype="multipart/form-data">
                    <div class="form-group ">
                        <label for="cbaslik" class="control-label col-lg-1">Başlık <span class="required">*</span></label>
                        <div class="col-lg-10">
                            <input class="form-control" id="Baslik" name="Baslik" minlength="5" type="text" required />
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="ckategori" class="control-label col-lg-1">Kategori</label>
                        <div class="col-lg-10">
                            @Html.DropDownList("KategoriId", null, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="cicerik" class="control-label col-lg-1">İçerik <span class="required">*</span></label>
                        <div class="col-lg-10">
                            <textarea name="Icerik" class="ckeditor"></textarea>
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="curl" class="control-label col-lg-1">Resim<span class="required">*</span></label>
                        <div class="col-lg-10">
                            <input type="file" class="form-control " id="ResimURL" required name="ResimURL" accept=".jpg,.jpeg,.png" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-10">
                            <button class="btn btn-primary" type="submit">Kaydet</button>
                            @*<button class="btn btn-default" type="button"><a href="/Hizmetler/Index">İptal</a></button>*@
                            @Html.ActionLink("İptal", "Index", null, new { @class = "btn btn-default" })
                        </div>
                    </div>
                </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>


